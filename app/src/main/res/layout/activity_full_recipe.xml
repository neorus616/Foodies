<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FullRecipeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fullRecipeImage"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:contentDescription="Recipe final image"
                android:scaleType="centerCrop"
                android:scaleX="1"
                android:scaleY="1"
                app:srcCompat="@drawable/select_image" />

            <TextView
                android:id="@+id/fullRecipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fullRecipeImage"
                android:text="Recipe"
                android:textSize="18sp" />

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/fullRecipe"
                android:text="Delete Post"
                android:textAllCaps="false"
                android:textStyle="bold" />

            <Button
                android:id="@+id/editButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/deleteButton"
                android:layout_alignParentStart="true"
                android:layout_marginTop="0dp"
                android:text="Edit Post"
                android:textAllCaps="false"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>